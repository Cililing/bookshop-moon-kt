<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/cardViewMargin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="@dimen/cardViewMargin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_margin="@dimen/cardview_default_elevation"
            tools:text="Harry Potter And The Blant of Nations"
            android:textSize="@dimen/bigSizeText"
            android:textColor="@color/colorTextMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.example.t_rex.moonbookshop.support.NonScrollListView
            android:layout_margin="8dp"
            android:id="@+id/propertyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.example.t_rex.moonbookshop.support.NonScrollListView>


    </LinearLayout>


</android.support.v7.widget.CardView>